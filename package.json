{
  "name": "js-stellar-wallets",
  "version": "0.0.0",
  "description": "Libraries to help you write Stellar-enabled wallets in Javascript",
  "main": "dist/index.js",
  "repository": "git@github.com:stellar/js-stellar-wallets.git",
  "author": "Stellar Development Foundation <hello@stellar.org>",
  "license": "Apache-2.0",
  "peerDependencies": {
    "stellar-sdk": "^0.15.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:typedefs": "tsc --declaration --outDir compiled/ -p tsconfig.json --emitDeclarationOnly",
    "dev": "tsc-watch --project tsconfig.json --onSuccess 'yarn lint'",
    "docs": "typedoc src/",
    "lint": "tslint --fix --project tsconfig.json",
    "lintAndTest": "yarn lint && jest",
    "prettier": "prettier --config prettier.config.js --write '**/*.{js,ts,md}'",
    "test": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,md}": [
      "prettier --config prettier.config.js --write",
      "git add"
    ],
    "**/*.ts": [
      "prettier --config prettier.config.js --write",
      "tslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.1",
    "@babel/preset-typescript": "^7.3.3",
    "@types/stellar-sdk": "^0.11.1",
    "babel-jest": "^24.5.0",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "sinon": "^7.3.0",
    "tsc-watch": "^2.1.2",
    "tslint": "^5.14.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "@types/jest": "^24.0.11",
    "bignumber.js": "^8.1.1",
    "lodash": "^4.17.11",
    "stellar-sdk": "^0.15.0"
  }
}
