{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["es2015", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "pretty": true,
    "preserveWatchOutput": false,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "target": "es5"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "examples/src/js-stellar-wallets",
    "documentation/src/docs.json",
    "src/fixtures"
  ],
  "typedocOptions": {
    "out": "docs",
    "mode": "modules",
    "exclude": ["**/*.test.ts", "**/node_modules/**"],
    "excludePrivate": true,
    "excludeNotExported": true,
    "includeDeclarations": true,
    "json": "dist/docs.json"
  }
}
